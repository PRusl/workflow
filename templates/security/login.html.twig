{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}

{% block title %}{% trans %}Log in{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="text-center">{% trans %}Log in{% endtrans %}</h1>
    <section class="row justify-content-center align-items-center">
        <form method="post" id="formLogin" class="form-login">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'messages') }}</div>
            {% endif %}
            <div class="login-box m-4">
                <h3>{% trans %}Please sign in{% endtrans %}</h3>
                <label for="inputUsername" class="mt-3">{% trans %}Username{% endtrans %}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       placeholder="Username" required autofocus>
                <label for="inputPassword" class="mt-3">{% trans %}Password{% endtrans %}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password"
                       required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mt-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> {% trans %}Remember me{% endtrans %}
                    </label>
                </div>

                <div class="text-center">
                    <button class="btn btn-primary mt-3 w-50" type="submit">
                        {% trans %}Sign in{% endtrans %}
                    </button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}
